<%= form_with(model: header) do |form| %>
<% if header.errors.any? %>
<div id="error_explanation" class="bg-red-50 p-6 rounded text-red-800">
  <h2 class="text-lg font-semibold mb-3"><%= pluralize(header.errors.count, "error") %> prohibited this header from being saved:</h2>

  <ul class="list-disc leading-relaxed">
    <% header.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

  <div class="mb-6">
        <%= form.label :headerid, class: label_class %>
          <%= form.text_field :headerid, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :name, class: label_class %>
          <%= form.text_field :name, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :phone, class: label_class %>
          <%= form.text_field :phone, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :email, class: label_class %>
          <%= form.text_field :email, class: input_class %>
      </div>

<%= form.submit class: button_class(theme: 'primary') %>

<% if header.persisted? %>
<%= link_to "Cancel", header, class: "text-neutral-700 underline inline-block ml-3" %>
<% else %>
<%= link_to "Cancel", headers_path, class:  "text-neutral-700 underline inline-block ml-3" %>
<% end %>
<% end %>
