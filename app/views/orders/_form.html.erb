<%= form_with(model: order) do |form| %>
<% if order.errors.any? %>
<div id="error_explanation" class="bg-red-50 p-6 rounded text-red-800">
  <h2 class="text-lg font-semibold mb-3"><%= pluralize(order.errors.count, "error") %> prohibited this order from being saved:</h2>

  <ul class="list-disc leading-relaxed">
    <% order.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

  <div class="mb-6">
        <%= form.label :orderid, class: label_class %>
          <%= form.text_field :orderid, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :client_id, class: label_class %>
        <%= form.select:client_id, options_from_collection_for_select(Client.all, 'id', 'clientphone', selected = order.client_id), class: label_class %>
      </div>
  <div class="mb-6">
        <%= form.label :orderdate, class: label_class %>
          <%= form.datetime_field :orderdate, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :point_id, class: label_class %>
        <%= form.select:point_id, options_from_collection_for_select(Point.all, 'id', 'bonuspoint', selected = order.point_id), class: label_class %>
      </div>
  <div class="mb-6">
        <%= form.label :discount_id, class: label_class %>
        <%= form.select:discount_id, options_from_collection_for_select(Discount.all, 'id', 'amount', selected = order.discount_id), class: label_class %>
      </div>
  <div class="mb-6">
        <%= form.label :ordercost, class: label_class %>
          <%= form.text_field :ordercost, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :paymentmethod_id, class: label_class %>
        <%= form.select:paymentmethod_id, options_from_collection_for_select(Paymentmethod.all, 'id', 'paymentmed', selected = order.paymentmethod_id), class: label_class %>
      </div>
  <div class="mb-6">
        <%= form.label :buyingmethod_id, class: label_class %>
        <%= form.select:buyingmethod_id, options_from_collection_for_select(Buyingmethod.all, 'id', 'buyingmed', selected = order.buyingmethod_id), class: label_class %>
      </div>

<%= form.submit class: button_class(theme: 'primary') %>

<% if order.persisted? %>
<%= link_to "Cancel", order, class: "text-neutral-700 underline inline-block ml-3" %>
<% else %>
<%= link_to "Cancel", orders_path, class:  "text-neutral-700 underline inline-block ml-3" %>
<% end %>
<% end %>
