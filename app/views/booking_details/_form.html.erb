<%= link_to "Cancel", booking_detail, class: "text-neutral-700 underline inline-block ml-3" %>
<% else %>
<%= link_to "Cancel", booking_details_path, class:  "text-neutral-700 underline inline-block ml-3" %>
<% end %>
<% end %>
