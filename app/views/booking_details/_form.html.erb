  <div class="mb-6">
        <%= form.label :bookingdetailid, class: label_class %>
          <%= form.text_field :bookingdetailid, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :service_id, class: label_class %>
          <%= form.text_field :service_id, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :time, class: label_class %>
          <%= form.datetime_field :time, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :bookingdescription, class: label_class %>
          <%= form.text_area :bookingdescription, class: input_class %>
      </div>

<%= form.submit class: button_class(theme: 'primary') %>

