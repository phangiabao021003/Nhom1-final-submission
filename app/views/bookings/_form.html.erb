<%= form_with(model: booking) do |form| %>
<% if booking.errors.any? %>
<div id="error_explanation" class="bg-red-50 p-6 rounded text-red-800">
  <h2 class="text-lg font-semibold mb-3"><%= pluralize(booking.errors.count, "error") %> prohibited this booking from being saved:</h2>

  <ul class="list-disc leading-relaxed">
    <% booking.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

  <div class="mb-6">
        <%= form.label :bookingid, class: label_class %>
          <%= form.text_field :bookingid, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :client_id, class: label_class %>
          <%= form.text_field :client_id, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :booking_productid, class: label_class %>
          <%= form.text_field :booking_productid, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :no_product, class: label_class %>
          <%= form.text_field :no_product, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :service_id, class: label_class %>
          <%= form.text_field :service_id, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :bookingdescription, class: label_class %>
          <%= form.text_area :bookingdescription, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :bookingcost, class: label_class %>
          <%= form.text_field :bookingcost, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :deposit, class: label_class %>
          <%= form.text_field :deposit, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :datebooking, class: label_class %>
          <%= form.datetime_field :datebooking, class: input_class %>
      </div>

<%= form.submit class: button_class(theme: 'primary') %>

<% if booking.persisted? %>
<%= link_to "Cancel", booking, class: "text-neutral-700 underline inline-block ml-3" %>
<% else %>
<%= link_to "Cancel", bookings_path, class:  "text-neutral-700 underline inline-block ml-3" %>
<% end %>
<% end %>
