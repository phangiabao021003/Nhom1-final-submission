<div class="max-w-3xl mx-auto px-4">
  <div class="flex items-center justify-between">
    <h1 class="flex-1 font-bold text-3xl">Supplier</h1>

    <div class="flex-wrap lg:flex items-center lg:space-x-3">
      <%= link_to suppliers_path, class: button_class(theme: "transparent") do %>
      All Suppliers
      <% end %>
      <%= link_to edit_supplier_path(@supplier), class: button_class(theme:"primary") do %>
      Edit
      <% end %>
    </div>
  </div>

  <ul class="text-slate-700">
      <li>
        <p class="font-semibold">Supplierid:</p>
        <p><%= @supplier.supplierid %></p>
      </li>
      <li>
        <p class="font-semibold">Suppliername:</p>
        <p><%= @supplier.suppliername %></p>
      </li>
      <li>
        <p class="font-semibold">Product:</p>
        <p><%= @supplier.product %></p>
      </li>
      <li>
        <p class="font-semibold">Manufacturing:</p>
        <p><%= @supplier.manufacturing %></p>
      </li>
      <li>
        <p class="font-semibold">Costproduct:</p>
        <p><%= @supplier.costproduct %></p>
      </li>
      <li>
        <p class="font-semibold">Producttype:</p>
        <p><%= @supplier.producttype %></p>
      </li>
  </ul>
</div>
