<%= form_with(model: store) do |form| %>
<% if store.errors.any? %>
<div id="error_explanation" class="bg-red-50 p-6 rounded text-red-800">
  <h2 class="text-lg font-semibold mb-3"><%= pluralize(store.errors.count, "error") %> prohibited this store from being saved:</h2>

  <ul class="list-disc leading-relaxed">
    <% store.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

  <div class="mb-6">
        <%= form.label :store_chain_id, class: label_class %>
          <%= form.select :store_chain_id, options_from_collection_for_select(StoreChain.all, 'id', 'chain_number', selected = store.store_chain_id), class: label_class %>
      </div>
  <div class="mb-6">
        <%= form.label :storeid, class: label_class %>
          <%= form.text_field :storeid, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :phone_contact, class: label_class %>
          <%= form.text_field :phone_contact, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :description, class: label_class %>
          <%= form.text_area :description, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :page, class: label_class %>
          <%= form.text_area :page, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :open_time, class: label_class %>
          <%= form.text_field :open_time, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :close_time, class: label_class %>
          <%= form.text_field :close_time, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :address, class: label_class %>
          <%= form.text_area :address, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :no_employee, class: label_class %>
          <%= form.number_field :no_employee, class: input_class %>
      </div>

<%= form.submit class: button_class(theme: 'primary') %>

<% if store.persisted? %>
<%= link_to "Cancel", store, class: "text-neutral-700 underline inline-block ml-3" %>
<% else %>
<%= link_to "Cancel", stores_path, class:  "text-neutral-700 underline inline-block ml-3" %>
<% end %>
<% end %>
