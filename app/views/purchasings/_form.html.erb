<%= form_with(model: purchasing) do |form| %>
<% if purchasing.errors.any? %>
<div id="error_explanation" class="bg-red-50 p-6 rounded text-red-800">
  <h2 class="text-lg font-semibold mb-3"><%= pluralize(purchasing.errors.count, "error") %> prohibited this purchasing from being saved:</h2>

  <ul class="list-disc leading-relaxed">
    <% purchasing.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

  <div class="mb-6">
        <%= form.label :store_id, class: label_class %>
          <%= form.text_field :store_id, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :product_id, class: label_class %>
          <%= form.text_field :product_id, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :supplier_id, class: label_class %>
          <%= form.text_field :supplier_id, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :unit, class: label_class %>
          <%= form.text_field :unit, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :no, class: label_class %>
          <%= form.number_field :no, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :datepurrchasing, class: label_class %>
          <%= form.datetime_field :datepurrchasing, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :purchasingcost, class: label_class %>
          <%= form.text_field :purchasingcost, class: input_class %>
      </div>

<%= form.submit class: button_class(theme: 'primary') %>

<% if purchasing.persisted? %>
<%= link_to "Cancel", purchasing, class: "text-neutral-700 underline inline-block ml-3" %>
<% else %>
<%= link_to "Cancel", purchasings_path, class:  "text-neutral-700 underline inline-block ml-3" %>
<% end %>
<% end %>
