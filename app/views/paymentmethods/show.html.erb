<div class="max-w-3xl mx-auto px-4">
  <div class="flex items-center justify-between">
    <h1 class="flex-1 font-bold text-3xl">Paymentmethod</h1>

    <div class="flex-wrap lg:flex items-center lg:space-x-3">
      <%= link_to paymentmethods_path, class: button_class(theme: "transparent") do %>
      All Paymentmethods
      <% end %>
      <%= link_to edit_paymentmethod_path(@paymentmethod), class: button_class(theme:"primary") do %>
      Edit
      <% end %>
    </div>
  </div>

  <ul class="text-slate-700">
      <li>
        <p class="font-semibold">Paymentmed:</p>
        <p><%= @paymentmethod.paymentmed %></p>
      </li>
  </ul>
</div>
