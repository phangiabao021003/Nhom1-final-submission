<%= form_with(model: booking_detail) do |form| %>
<% if booking_detail.errors.any? %>
<div id="error_explanation" class="bg-red-50 p-6 rounded text-red-800">
  <h2 class="text-lg font-semibold mb-3"><%= pluralize(booking_detail.errors.count, "error") %> prohibited this booking_detail from being saved:</h2>

  <ul class="list-disc leading-relaxed">
    <% booking_detail.errors.full_messages.each do |message| %>
