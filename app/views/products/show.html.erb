<div class="max-w-3xl mx-auto px-4">
  <div class="flex items-center justify-between">
    <h1 class="flex-1 font-bold text-3xl">Product</h1>

    <div class="flex-wrap lg:flex items-center lg:space-x-3">
      <%= link_to products_path, class: button_class(theme: "transparent") do %>
      All Products
      <% end %>
      <%= link_to edit_product_path(@product), class: button_class(theme:"primary") do %>
      Edit
      <% end %>
    </div>
  </div>

  <ul class="text-slate-700">
      <li>
        <p class="font-semibold">Productname:</p>
        <p><%= @product.productname %></p>
      </li>
      <li>
        <p class="font-semibold">Product type:</p>
        <p><%= @product.product_type.typename %></p>
      </li>
      <li>
        <p class="font-semibold">Manufacturing:</p>
        <p><%= @product.manufacturing.manname %></p>
      </li>
      <li>
        <p class="font-semibold">Cost:</p>
        <p><%= @product.cost %></p>
      </li>
  </ul>
</div>
